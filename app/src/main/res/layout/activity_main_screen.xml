<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".main_screen"
    android:id="@+id/main_screen">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Main_potato"
        android:src="@drawable/body"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:contentDescription="potato_body" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_hat"
        android:src="@drawable/hat"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_eyes"
        android:contentDescription="deep_eyes"
        android:layout_alignTop="@+id/Main_potato"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:src="@drawable/eyes" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_eyebrows"
        android:contentDescription="hairy_eyebrows"
        android:layout_alignTop="@+id/Main_potato"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5dp"
        android:src="@drawable/eyebrows" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_glasses"
        android:contentDescription="designer_glasses"
        android:layout_alignTop="@+id/Main_potato"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:src="@drawable/glasses" />

    <TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

        android:id="@+id/main_table"
    android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff"
        android:layout_marginTop="-50dp"
        android:layout_below="@+id/Main_potato"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hat"
            android:id="@+id/check_hat"
            android:checked="false"
            android:onClick="onClick" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eyes"
            android:id="@+id/check_eyes"
            android:checked="false"
            android:onClick="onClick" />
    </TableRow>

    <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eyebrows"
                android:id="@+id/check_eyebrows"
                android:checked="false"
                android:onClick="onClick" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glasses"
                android:id="@+id/check_glasses"
                android:checked="false"
                android:onClick="onClick" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nose"
                android:id="@+id/check_nose"
                android:checked="false"
                android:onClick="onClick" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mouth"
                android:id="@+id/check_mouth"
                android:checked="false"
                android:onClick="onClick" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arms"
                android:id="@+id/arms"
                android:checked="false"
                android:onClick="onClick" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoes"
                android:id="@+id/shoes"
                android:checked="false"
                android:onClick="onClick" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mustache"
                android:id="@+id/check_mustache"
                android:checked="false"
                android:onClick="onClick" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ears"
                android:id="@+id/check_ears"
                android:checked="false"
                android:onClick="onClick" />
        </TableRow>




</TableLayout>


</RelativeLayout>